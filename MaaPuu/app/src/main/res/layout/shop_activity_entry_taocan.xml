<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <include layout="@layout/top"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="填写信息"
                android:layout_marginLeft="12dp"
                android:textSize="12sp"
                android:textColor="@color/text_99"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"
                    android:gravity="right|center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:maxLength="11"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"
                    android:gravity="right|center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"/>
                <TextView
                    android:id="@+id/txt_birth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:hint="请选择"
                    android:textColorHint="@color/line"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/youjiantou"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"
                    android:gravity="right|center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择店铺"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"/>
                <TextView
                    android:id="@+id/txt_shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:hint="请选择"
                    android:textColorHint="@color/line"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/youjiantou"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"
                    android:gravity="right|center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择套餐类型"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"/>
                <TextView
                    android:id="@+id/txt_taocan_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:hint="请选择"
                    android:textColorHint="@color/line"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/youjiantou"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"
                    android:gravity="right|center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择套餐"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"/>
                <TextView
                    android:id="@+id/txt_taocan_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:hint="请选择"
                    android:textColorHint="@color/line"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/youjiantou"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"
                    android:gravity="right|center_vertical"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/txt_card_content"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="套餐项目"
                    android:layout_marginLeft="12dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_99"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_card_content">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_add"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="添加项目"
                android:textColor="@color/main_color"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_no_use"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经办人"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"/>
                <TextView
                    android:id="@+id/txt_emploee_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"
                    android:gravity="right|center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/txt_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/text_33"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"/>
</LinearLayout>
