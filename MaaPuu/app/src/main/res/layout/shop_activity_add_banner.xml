<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/as_cover_rl"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:src="@mipmap/shangchuantupian"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="85dp"
                    android:text="上传店铺轮播图片"
                    android:textColor="@color/text_99"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="110dp"
                    android:text="(图片比例2.5:1)"
                    android:textColor="@color/text_99"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/as_cover_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ab_choose_category_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="选择类型"
                    android:textSize="13sp"
                    android:textColor="@color/text_33"/>

                <TextView
                    android:id="@+id/ab_choose_category_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center|right"
                    android:background="@null"
                    android:hint="请选择"
                    android:textColorHint="@color/text_99"
                    android:drawableRight="@mipmap/youjiantou"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:textSize="11sp"
                    android:textColor="@color/text_99"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ab_category_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/ab_category_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="选择项目"
                    android:textSize="13sp"
                    android:textColor="@color/text_33"/>

                <TextView
                    android:id="@+id/ab_category_value_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center|right"
                    android:background="@null"
                    android:hint="请选择"
                    android:textColorHint="@color/text_99"
                    android:drawableRight="@mipmap/youjiantou"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:textSize="11sp"
                    android:textColor="@color/text_99"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ab_link_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                android:layout_marginTop="1dp"

                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="链接地址"
                    android:textSize="13sp"
                    android:textColor="@color/text_33"/>

                <EditText
                    android:id="@+id/ab_link_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center|right"
                    android:hint="格式：http://www.baidu.com"
                    android:textColorHint="@color/text_99"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="11sp"
                    android:textColor="@color/text_99"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>