<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:background="@mipmap/em_cancel_service"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="65dp"
                        android:text="您已预约成功"
                        android:textColor="@color/text_33"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:textColor="@color/text_99"
                        android:textSize="12sp"
                        tools:text="" />

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:maxLines="1"
                        android:textColor="@color/text_33"
                        android:textSize="15sp"
                        tools:text="" />

                    <TextView
                        android:id="@+id/tv_pay_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:textColor="@color/bg_red"
                        android:textSize="15sp"
                        tools:text="" />

                    <TextView
                        android:id="@+id/total_srv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_33"
                        android:textSize="12sp"
                        tools:text="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/text_33"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <com.maapuu.mereca.view.MyListView
                        android:id="@+id/list_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:divider="@color/transparent"
                        android:dividerHeight="3dp"
                        android:listSelector="@color/transparent"></com.maapuu.mereca.view.MyListView>

                    <TextView
                        android:id="@+id/appoint_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/text_33"
                        android:textSize="12sp"
                        tools:text="" />

                    <!--<TextView-->
                        <!--android:id="@+id/appoint_phone"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="5dp"-->
                        <!--android:textColor="@color/text_33"-->
                        <!--android:textSize="12sp"-->
                        <!--tools:text="13612345678" />-->

                </LinearLayout>

                <ImageView
                    android:layout_width="121dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/banlichenggong" />

            </FrameLayout>

            <TextView
                android:id="@+id/txt_zdfxs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/zdfxs"
                android:gravity="center"
                android:text="您可指定发型师"
                android:textColor="@color/text_33"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_see_order"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bg_solid_f5_stroke_99_radius3"
                    android:gravity="center"
                    android:text="查看订单"
                    android:textColor="@color/text_33"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_go_home"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/bg_solid_f5_stroke_99_radius3"
                    android:gravity="center"
                    android:text="回首页"
                    android:textColor="@color/text_33"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>