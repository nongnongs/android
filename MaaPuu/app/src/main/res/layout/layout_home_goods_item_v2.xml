<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@color/text_dd"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/txt_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/text_33"/>
        <TextView
            android:id="@+id/txt_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="3dp"
            android:layout_above="@+id/rl_bottom"
            android:textSize="12sp"
            android:textColor="@color/text_66"/>
        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/txt_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专享价"
                android:textSize="12sp"
                android:textColor="@color/text_66"/>
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_price_label"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/text_price"/>
            <TextView
                android:id="@+id/txt_sale_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/txt_price_label"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/text_99"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
