<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include layout="@layout/top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:scrollbars="none"
        android:fillViewport="true"
        android:fadingEdge="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:gravity="center_horizontal"
                    android:background="@mipmap/em_cancel_service"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="65dp"
                        android:text="办理成功"
                        android:textSize="15sp"
                        android:textColor="@color/text_33"/>
                    <TextView
                        android:id="@+id/txt_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="@color/text_99"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp">
                        <TextView
                            android:id="@+id/txt_card_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text=""
                            android:maxLines="1"
                            android:textSize="15sp"
                            android:textColor="@color/text_33"/>
                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text=""
                            android:maxLines="1"
                            android:textSize="15sp"
                            android:textColor="@color/bg_red"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        tools:text=""
                        android:textSize="12sp"
                        android:textColor="@color/text_33"/>

                    <TextView
                        android:id="@+id/txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        tools:text=""
                        android:textSize="12sp"
                        android:textColor="@color/text_33"/>

                    <TextView
                        android:id="@+id/txt_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        tools:text=""
                        android:textSize="12sp"
                        android:textColor="@color/text_33"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="去"
                            android:textSize="12sp"
                            android:textColor="@color/text_33"/>
                        <TextView
                            android:id="@+id/txt_card_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="会员中心"
                            android:textSize="12sp"
                            android:textColor="@color/main_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="查看我的卡>>"
                            android:textSize="12sp"
                            android:textColor="@color/text_33"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="121dp"
                    android:layout_height="76dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/banlichenggong"/>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:maxLines="1"
                    tools:text=""
                    android:textSize="10sp"
                    android:textColor="@color/text_99"/>
                <TextView
                    android:id="@+id/txt_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:maxLines="1"
                    tools:text=""
                    android:textSize="10sp"
                    android:textColor="@color/text_99"/>
                <TextView
                    android:id="@+id/txt_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    tools:text=""
                    android:textSize="10sp"
                    android:textColor="@color/text_99"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>