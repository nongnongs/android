<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/text_33"
            android:text=""
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/dianpu"/>
        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="待付款"
            android:textSize="12sp"
            android:textColor="@color/bg_red"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_fa"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:actualImageScaleType="focusCrop"
            app:fadeDuration="300"
            app:failureImage="@mipmap/nopic"
            app:failureImageScaleType="fitXY"
            app:placeholderImageScaleType="fitXY"/>
        <RelativeLayout
            android:id="@+id/rl_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/txt_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:text="渼树宇宙第一烫染套餐"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"/>
                <TextView
                    android:id="@+id/txt_project_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥666.00"
                    android:textSize="11sp"
                    android:textColor="#f85050"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_project_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_yy_time"
                android:layout_marginBottom="5dp"
                android:text="武汉市渼树光谷旗舰店"
                android:textSize="11sp"
                android:textColor="@color/text_99"/>
            <TextView
                android:id="@+id/txt_yy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="预约时间：2018-2-22 10:50"
                android:textSize="11sp"
                android:textColor="@color/text_99"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/text_33"
                android:text="渼树防脱发洗发水 无硅油洗发露男女通用侧柏叶强韧健发洗发膏"
                android:lineSpacingExtra="5dp"/>
            <TextView
                android:id="@+id/txt_goods_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格：300ml"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_99"
                android:layout_below="@+id/txt_goods_name"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/txt_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥66"
                    android:textSize="14sp"
                    android:textColor="@color/text_price"/>
                <TextView
                    android:id="@+id/txt_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="×2"
                    android:textSize="10sp"
                    android:textColor="@color/text_99"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_refund_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退货退款"
        android:drawableLeft="@mipmap/tui"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:textSize="12sp"
        android:textColor="@color/text_33"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:id="@+id/txt_check_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColor="@color/text_33"
        android:background="@drawable/bg_solid_stroke_99_radius20"
        android:textSize="11sp"
        android:text="查看详情"/>
</LinearLayout>
