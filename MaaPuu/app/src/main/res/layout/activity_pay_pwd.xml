<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:psd="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">
    <include layout="@layout/top"/>
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我们将发送"
                    android:textSize="16sp"
                    android:textColor="@color/text_66"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到您是手机"
                    android:textSize="16sp"
                    android:textColor="@color/text_66"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_code_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <com.maapuu.mereca.view.PayPsdInputView
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:inputType="number"
            psd:maxCount="4"
            psd:txtSize="18sp"
            psd:psdType="bottomLine"
            psd:isPassword="false" />
        <TextView
            android:id="@+id/txt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="获取验证码"
            android:textColor="@color/text_66"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请为账号185****5236"
                android:textSize="16sp"
                android:textColor="@color/text_66"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置6位数字安全密码"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <com.maapuu.mereca.view.PayPsdInputView
            android:id="@+id/et_pwd_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            psd:maxCount="6"
            psd:backColor="@color/white"
            psd:rectAngle="5sp"
            psd:txtSize="18sp"
            psd:psdType="weChat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="支付密码不能是重复、连续的数字"
            android:textColor="@color/text_66"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请再次输入"
                android:textSize="16sp"
                android:textColor="@color/text_66"/>
        </LinearLayout>
        <com.maapuu.mereca.view.PayPsdInputView
            android:id="@+id/et_pwd_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            psd:maxCount="6"
            psd:backColor="@color/white"
            psd:rectAngle="5sp"
            psd:txtSize="18sp"
            psd:psdType="weChat"/>
        <TextView
            android:id="@+id/txt_complete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_refuse_btn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:text="完成"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
