<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <include layout="@layout/top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/bg_kabao_btn1">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_shop"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                app:actualImageScaleType="fitXY"
                app:fadeDuration="300"
                app:failureImage="@mipmap/nopic"
                app:failureImageScaleType="center"
                app:roundAsCircle="true" />
            <TextView
                android:id="@+id/txt_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/iv_shop"
                android:layout_alignTop="@+id/iv_shop"/>
            <TextView
                android:id="@+id/txt_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="40sp"
                android:textColor="#20ffffff"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/txt_card_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="23dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="10dp"
            android:text="填写信息"
            android:textSize="11sp"
            android:textColor="@color/text_99"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/text_33"
                android:textSize="13sp"/>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:background="@null"
                android:singleLine="true"
                android:hint=""
                android:textSize="13sp"
                android:textColor="@color/text_33"
                android:textColorHint="@color/text_99"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:textColor="@color/text_33"
                android:textSize="13sp"/>
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:inputType="number"
                android:maxLength="11"
                android:background="@null"
                android:singleLine="true"
                android:hint=""
                android:textSize="13sp"
                android:textColor="@color/text_33"
                android:textColorHint="@color/text_99"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日"
                android:textColor="@color/text_33"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/txt_birth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:drawableRight="@mipmap/youjiantou"
                android:drawablePadding="5dp"
                android:background="@null"
                android:singleLine="true"
                android:hint="请选择"
                android:textSize="13sp"
                android:textColor="@color/text_33"
                android:textColorHint="@color/text_99"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_icon"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="照片存档"
                android:textSize="13sp"
                android:textColor="@color/text_33"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="仅限照片本人使用"
                android:textSize="13sp"
                android:textColor="@color/text_99"/>
            <com.maapuu.mereca.view.CircleImgView
                android:id="@+id/iv_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/morentouxiang"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/youjiantou"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="合计金额："
                    android:textColor="@color/text_33"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="¥0.00"
                    android:textColor="@color/text_price"
                    android:textSize="14sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_pay"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/text_33"
                android:gravity="center"
                android:text="立即支付"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
