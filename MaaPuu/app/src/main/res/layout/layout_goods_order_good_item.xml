<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/goods_order_lt"
    android:background="@color/color_fa"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_goods"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:actualImageScaleType="focusCrop"
            app:fadeDuration="300"
            android:background="@color/text_dd"
            app:failureImage="@mipmap/nopic"
            app:failureImageScaleType="center"
            app:placeholderImageScaleType="fitXY"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/text_33"
                android:text=""
                android:lineSpacingExtra="5dp"/>
            <TextView
                android:id="@+id/txt_goods_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_99"
                android:layout_below="@+id/txt_goods_name"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/txt_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_price"/>
                <TextView
                    android:id="@+id/txt_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textSize="10sp"
                    android:textColor="@color/text_99"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_refund_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/text_price"/>
            <TextView
                android:id="@+id/txt_apply_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/text_33"
                android:background="@drawable/bg_solid_touming_stroke_99_radius20"
                android:textSize="11sp"
                android:text="退款"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"/>
</LinearLayout>
