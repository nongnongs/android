<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="立即支付"
                android:textSize="14sp"
                android:textColor="@color/text_33"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/guanbi"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_pay_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="¥ 200.00"
            android:textSize="20sp"
            android:textColor="@color/text_33"/>
        <TextView
            android:id="@+id/txt_alipay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/zhifubaozhifu"
            android:drawableRight="@drawable/bg_choose_selector"
            android:drawablePadding="10dp"
            android:text="支付宝支付"
            android:textColor="@color/text_33"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/txt_wxpay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/weixinzhifu"
            android:drawableRight="@drawable/bg_choose_selector"
            android:drawablePadding="10dp"
            android:text="微信支付"
            android:textColor="@color/text_33"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/txt_yue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/yuezhifu"
            android:drawableRight="@drawable/bg_choose_selector"
            android:drawablePadding="10dp"
            android:text="余额支付(余额：360)"
            android:textColor="@color/text_33"
            android:textSize="14sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_confirm_pay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/text_33"
        android:gravity="center"
        android:text="确认支付"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>
