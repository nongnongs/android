<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/text_33"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/code_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="39958498484968494"
            android:textColor="@color/text_99"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp">

        <ImageView
            android:id="@+id/iv_ewm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/erweima" />

        <TextView
            android:id="@+id/txt_btn"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/iv_ewm"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_article_btn_selector"
            android:gravity="center"
            android:text="预约"
            android:textColor="@color/text_red_99"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>
