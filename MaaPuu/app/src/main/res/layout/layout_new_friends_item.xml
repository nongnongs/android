<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    android:gravity="center_vertical">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:actualImageScaleType="focusCrop"
        app:fadeDuration="300"
        app:failureImage="@mipmap/morentouxiang"
        app:failureImageScaleType="focusCrop"
        app:placeholderImage="@mipmap/morentouxiang"
        app:placeholderImageScaleType="fitCenter"
        app:roundAsCircle="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大咖"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_33"/>
        <TextView
            android:id="@+id/txt_msg_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="请求添加你为好友"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_99"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_agree"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:text="同意"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_agree_btn"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"/>
        <TextView
            android:id="@+id/txt_refuse"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:text="拒绝"
            android:gravity="center"
            android:background="@drawable/bg_agree_btn"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已添加"
        android:visibility="gone"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_99"/>
</LinearLayout>
