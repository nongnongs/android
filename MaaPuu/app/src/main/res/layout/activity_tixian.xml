<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <include layout="@layout/top"/>
    <LinearLayout
        android:id="@+id/ll_wx"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="12dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wx"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信钱包"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"/>

                <TextView
                    android:id="@+id/txt_wx_unbind"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:text="解绑"
                    android:textSize="14sp"
                    android:textColor="@color/blue"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_wx_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="未绑定"
                android:textSize="12sp"
                android:textColor="@color/text_99"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/right_arrow"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_zfb"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="12dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zfb"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textSize="14sp"
                    android:textColor="@color/text_33"/>

                <TextView
                    android:id="@+id/txt_zfb_unbind"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:text="解绑"
                    android:textSize="14sp"
                    android:textColor="@color/blue"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_zfb_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="未绑定"
                android:textSize="12sp"
                android:textColor="@color/text_99"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/right_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:textColor="@color/text_33"
                android:textSize="13sp"/>
            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:background="@null"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:hint="当前最多可提现500元"
                android:textSize="13sp"
                android:textColor="@color/text_33"
                android:textColorHint="@color/text_99"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码    "
                android:textColor="@color/text_33"
                android:textSize="13sp"/>
            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:background="@null"
                android:singleLine="true"
                android:inputType="number"
                android:hint="请输入短信验证码"
                android:textSize="13sp"
                android:textColor="@color/text_33"
                android:textColorHint="@color/text_99"/>
            <TextView
                android:id="@+id/txt_code"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:background="@drawable/bg_solid_ff_stroke_99_radius3"
                android:gravity="center"
                android:text="获取验证码"
                android:textSize="12sp"
                android:textColor="@color/text_33"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_commit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:text="确认提交"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
