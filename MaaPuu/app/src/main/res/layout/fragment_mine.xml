<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <!-- 头部-->
            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="20dp"
                android:paddingBottom="15dp">
                <com.maapuu.mereca.view.CircleImgView
                    android:id="@+id/image"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/morentouxiang"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/txt_nick_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="迷失的迷离"
                            android:textSize="15sp"
                            android:textColor="@color/text_33"/>
                        <ImageView
                            android:id="@+id/iv_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:src="@mipmap/zhuanyerenzhen"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_signture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="是我的文字伤感还是文字让我悲伤。"
                        android:textSize="12sp"
                        android:textColor="@color/text_99"/>
                    <TextView
                        android:id="@+id/txt_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@mipmap/dianpu"
                        android:text=""
                        android:visibility="gone"
                        android:drawablePadding="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/text_99"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/youjiantou"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"/>
            <!-- 收藏栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp">
                <TextView
                    android:id="@+id/txt_collection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="收藏"
                    android:gravity="center"
                    android:drawableTop="@mipmap/wodeshoucangda"
                    android:drawablePadding="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_33"/>
                <TextView
                    android:id="@+id/txt_attection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="关注"
                    android:gravity="center"
                    android:drawableTop="@mipmap/wodeguanzhuda"
                    android:drawablePadding="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_33"/>
                <TextView
                    android:id="@+id/txt_kabao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="卡包"
                    android:gravity="center"
                    android:drawableTop="@mipmap/wodekabao"
                    android:drawablePadding="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_33"/>
                <TextView
                    android:id="@+id/txt_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="购物车"
                    android:gravity="center"
                    android:drawableTop="@mipmap/wodegouwucheda"
                    android:drawablePadding="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_33"/>
            </LinearLayout>
            <!-- 订单栏-->
            <RelativeLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="我的订单"
                    android:layout_centerVertical="true"
                    android:textSize="13sp"
                    android:textColor="@color/text_33"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/youjiantou"/>
            </RelativeLayout>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"/>
            <LinearLayout
                android:id="@+id/ll_yuyue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_order"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/text_dd"
                    app:actualImageScaleType="focusCrop"
                    app:fadeDuration="300"
                    app:failureImage="@mipmap/nopic"
                    app:failureImageScaleType="center"
                    app:placeholderImageScaleType="fitXY"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/text_fa"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/txt_goods_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/text_33"/>

                        <TextView
                            android:id="@+id/txt_goods_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#f85050"
                            android:textSize="11sp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/txt_yy_time"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        android:textSize="11sp"
                        android:textColor="@color/text_99"/>
                    <TextView
                        android:id="@+id/txt_yy_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text=""
                        android:textSize="11sp"
                        android:textColor="@color/text_99"/>
                </RelativeLayout>
            </LinearLayout>
            <!-- 底部菜单栏-->
            <com.maapuu.mereca.view.MyListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@color/transparent"
                android:divider="@null"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

            </com.maapuu.mereca.view.MyListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
