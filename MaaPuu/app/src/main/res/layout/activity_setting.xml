<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/top"/>
        <TextView
            android:id="@+id/txt_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/youjiantou"
            android:gravity="center_vertical"
            android:text="清除缓存"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="@color/text_33"/>
        <TextView
            android:id="@+id/txt_change_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/youjiantou"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="@color/text_33"/>
        <TextView
            android:id="@+id/txt_change_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/youjiantou"
            android:gravity="center_vertical"
            android:text="修改手机号"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="@color/text_33"/>
        <TextView
            android:id="@+id/txt_pay_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/youjiantou"
            android:gravity="center_vertical"
            android:text="设置安全密码"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="@color/text_33"/>
        <TextView
            android:id="@+id/txt_about_us"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/youjiantou"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="@color/text_33"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_quit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/text_33"
        android:gravity="center"
        android:text="退出登录"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</RelativeLayout>
