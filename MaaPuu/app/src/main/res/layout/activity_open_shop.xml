<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <include layout="@layout/top"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="请上传店铺营业执照"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/text_33"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_yyzz"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/yingyezhizhao1"
                            android:layout_centerInParent="true"/>
                        <ImageView
                            android:id="@+id/iv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/tianjiahuitupian"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_yyzz_sc"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/yingyezhizhao2"
                            android:layout_centerInParent="true"/>
                        <ImageView
                            android:id="@+id/iv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/tianjiahuitupian"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_sfz_z"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/shenfenzhengzheng"
                            android:layout_centerInParent="true"/>
                        <ImageView
                            android:id="@+id/iv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/tianjiahuitupian"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_sfz_f"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/shenfenzhengfan"
                            android:layout_centerInParent="true"/>
                        <ImageView
                            android:id="@+id/iv_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/tianjiahuitupian"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="联系人信息"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/text_33"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/text_33"
                    android:textSize="13sp"/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint=""
                    android:textSize="13sp"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textColor="@color/text_33"
                    android:textSize="13sp"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:inputType="number"
                    android:maxLength="11"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint=""
                    android:textSize="13sp"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="完善商家信息"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/text_33"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺名称"
                    android:textColor="@color/text_33"
                    android:textSize="13sp"/>
                <EditText
                    android:id="@+id/et_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint=""
                    android:textSize="13sp"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺所在地"
                    android:textColor="@color/text_33"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@mipmap/youjiantou"
                    android:drawablePadding="5dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint="请选择"
                    android:textSize="13sp"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"/>
            </LinearLayout>
            <EditText
                android:id="@+id/et_detail"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="top"
                android:background="@color/white"
                android:singleLine="true"
                android:hint="请填写详细地址"
                android:textSize="13sp"
                android:textColor="@color/text_33"
                android:textColorHint="@color/text_99"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/txt_commit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/text_33"
        android:gravity="center"
        android:text="提交"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>
