<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/text_33"
            android:maxLines="1"
            android:ellipsize="end"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/dianpu"/>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="待付款"
            android:textSize="12sp"
            android:textColor="@color/bg_red"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="right|bottom">

        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            tools:text="订单编号：201855555555555"
            android:textColor="@color/main_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_33"
            android:textSize="10sp"
            tools:text="共1件商品"/>

        <!--<TextView-->
            <!--android:id="@+id/txt_label"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:textColor="@color/text_33"-->
            <!--android:textSize="10sp"-->
            <!--android:text="需付款："/>-->

        <TextView
            android:id="@+id/txt_pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_33"
            android:textSize="14sp"
            tools:text="¥666.00"/>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/background"/>

    <LinearLayout
        android:id="@+id/oc_marker_ll"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical|right"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/om_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"
            android:background="@drawable/bg_solid_stroke_99_radius20"
            android:text="评价"
            android:textColor="@color/text_33"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/ship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/text_33"
            android:background="@drawable/bg_solid_stroke_99_radius20"
            android:textSize="11sp"
            android:text="发货"/>

        <TextView
            android:id="@+id/remind_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/text_33"
            android:background="@drawable/bg_solid_stroke_99_radius20"
            android:textSize="11sp"
            android:text="提醒"/>

        <TextView
            android:id="@+id/refund_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/text_33"
            android:background="@drawable/bg_solid_stroke_99_radius20"
            android:textSize="11sp"
            android:text="退款"/>

        <TextView
            android:id="@+id/complaint_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/text_33"
            android:background="@drawable/bg_solid_stroke_99_radius20"
            android:textSize="11sp"
            tools:text="投诉建议"/>

    </LinearLayout>

</LinearLayout>
