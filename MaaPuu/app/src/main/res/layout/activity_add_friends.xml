<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <include layout="@layout/top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <com.maapuu.mereca.view.SearchEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/et_search"
            android:layout_weight="1"
            android:textSize="12sp"
            android:hint="搜索好友"
            android:drawableLeft="@mipmap/sousuhui"
            android:drawablePadding="5dp"
            android:textColor="@color/text_33"
            android:textColorHint="@color/text_99"
            android:background="@drawable/bg_search_btn"
            android:layout_gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_my_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/tjhxfx"
        android:drawableRight="@mipmap/tjhyewm"
        android:drawablePadding="10dp"
        android:text="分享我的二维码"
        android:textSize="14sp"
        android:textColor="@color/text_33"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/txt_scan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/tjhysys"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/right_arrow"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="扫一扫添加好友"
        android:textColor="@color/text_33"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:id="@+id/txt_phone_contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/tjhysjlxr"
        android:drawableRight="@mipmap/right_arrow"
        android:drawablePadding="10dp"
        android:text="添加手机联系人"
        android:textSize="14sp"
        android:textColor="@color/text_33"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:id="@+id/txt_nearby_person"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/tjhyfjdr"
        android:drawableRight="@mipmap/right_arrow"
        android:drawablePadding="10dp"
        android:text="附近的人"
        android:textSize="14sp"
        android:textColor="@color/text_33"/>
</LinearLayout>
