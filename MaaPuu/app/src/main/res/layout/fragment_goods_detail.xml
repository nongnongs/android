<com.ysnows.page.PageContainer
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.ysnows.page.Page
        android:id="@+id/pageOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_goods"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:background="@color/text_dd"
                app:actualImageScaleType="fitXY"
                app:fadeDuration="300"
                app:failureImage="@mipmap/nopic"
                app:failureImageScaleType="center"
                app:placeholderImageScaleType="fitXY"/>

            <LinearLayout
                android:id="@+id/ll_qg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:background="#FFD400"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="@color/white"
                            android:textSize="11sp"/>
                        <TextView
                            android:id="@+id/txt_qg_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="32sp"/>
                        <TextView
                            android:id="@+id/txt_qg_sale_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="已有0人购买"
                            android:textColor="@color/white"
                            android:textSize="11sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/xsqg"/>
                        <TextView
                            android:id="@+id/txt_original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:background="#FFF5C1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#e5ca44"
                        android:text="距结束还剩"/>
                    <com.maapuu.mereca.view.TimerTextView
                        android:id="@+id/txt_qg_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_count_down"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/txt_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/text_33"/>
                <TextView
                    android:id="@+id/txt_goods_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="11sp"
                    android:textColor="@color/text_99"/>
                <LinearLayout
                    android:id="@+id/ll_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CNY"
                        android:textSize="12sp"
                        android:textColor="@color/text_33"/>
                    <TextView
                        android:id="@+id/txt_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="24sp"
                        android:textColor="@color/text_33"/>
                    <TextView
                        android:id="@+id/txt_market_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="11sp"
                        android:textColor="@color/text_33"/>
                    <TextView
                        android:id="@+id/txt_sale_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0人购买过"
                        android:textSize="11sp"
                        android:textColor="@color/text_99"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_get_coupon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="12dp"
                android:drawableLeft="@mipmap/dianpuyouhuiquan"
                android:drawableRight="@mipmap/right_arrow"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="领取优惠券"
                android:textColor="@color/text_99"
                android:textSize="12sp"/>
            <RelativeLayout
                android:id="@+id/rl_zuhe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="组合套餐"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@mipmap/yipin"
                    android:textColor="@color/text_66"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/chaoyouhui"
                    android:layout_toRightOf="@+id/txt"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:id="@+id/iv_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/quxuangou"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="评价"
                        android:textSize="11sp"
                        android:textColor="@color/text_33"/>
                    <TextView
                        android:id="@+id/txt_evl_good_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好评率 99%"
                        android:drawableRight="@mipmap/youjiantou"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:textSize="11sp"
                        android:textColor="@color/text_33"/>
                </LinearLayout>
                <include layout="@layout/layout_goods_comment_item"
                    android:id="@+id/ll_evl"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/txt_all_evl_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="全部评价(0)"
                        android:textSize="11sp"
                        android:textColor="@color/text_33"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/line" />
                    <TextView
                        android:id="@+id/txt_pic_evl_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="晒单评价(0)"
                        android:textSize="11sp"
                        android:textColor="@color/text_33"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="上拉查看详情"
                    android:textSize="11sp"
                    android:textColor="@color/text_33"/>
            </LinearLayout>
        </LinearLayout >
    </com.ysnows.page.Page >

    <com.ysnows.page.Page
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/pageBehavior" >

        <com.maapuu.mereca.view.MyListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none">

        </com.maapuu.mereca.view.MyListView>
    </com.ysnows.page.Page >

</com.ysnows.page.PageContainer >
