<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background">

    <include layout="@layout/top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <!--地址 -->
            <LinearLayout
                android:id="@+id/ll_has_address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_shop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    app:actualImageScaleType="focusCrop"
                    app:fadeDuration="300"
                    app:failureImage="@mipmap/nopic"
                    app:failureImageScaleType="center"
                    app:placeholderImageScaleType="fitXY"
                    app:roundAsCircle="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="武汉光谷国际广场店"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/text_33"/>
                    <TextView
                        android:id="@+id/txt_shop_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        tools:text="湖北省武汉市洪山区光谷国际广场A座1514-1515"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/text_99"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    tools:text="距我515米"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text_99"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="订单详情"
                    android:textSize="12sp"
                    android:textColor="@color/text_33"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_fa"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_goods"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/text_dd"
                        app:actualImageScaleType="focusCrop"
                        app:fadeDuration="300"
                        app:failureImage="@mipmap/nopic"
                        app:failureImageScaleType="center"
                        app:placeholderImageScaleType="fitXY"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_goods_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/text_33"
                            tools:text="渼树防脱发洗发水"
                            android:lineSpacingExtra="5dp"/>
                        <TextView
                            android:id="@+id/txt_goods_spec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="黑色气质短发"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/text_99"
                            android:layout_below="@+id/txt_goods_name"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="bottom">
                            <TextView
                                android:id="@+id/txt_goods_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="¥66"
                                android:textSize="14sp"
                                android:textColor="@color/text_price"/>

                            <TextView
                                android:id="@+id/txt_goods_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                tools:text="×1"
                                android:textSize="10sp"
                                android:textColor="@color/text_99"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginBottom="3dp"
                android:padding="12dp">

                <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:text="服务总价"-->
                        <!--android:textSize="10sp"-->
                        <!--android:textColor="@color/text_99"/>-->

                    <!--<TextView-->
                        <!--android:id="@+id/txt_srv_price"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--tools:text="¥66"-->
                        <!--android:textSize="10sp"-->
                        <!--android:textColor="@color/text_99"/>-->
                <!--</RelativeLayout>-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="优惠"
                        android:textSize="10sp"
                        android:textColor="@color/text_99"/>
                    <TextView
                        android:id="@+id/txt_youhui_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        tools:text="-¥10"
                        android:textSize="10sp"
                        android:textColor="@color/text_99"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="订单总价"
                        android:textSize="14sp"
                        android:textColor="@color/text_33"/>
                    <TextView
                        android:id="@+id/txt_order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        tools:text="¥56"
                        android:textSize="14sp"
                        android:textColor="@color/text_33"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:layout_marginBottom="10dp"
                android:gravity="right|bottom"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/txt_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="实付款："
                    android:textColor="@color/text_price"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/txt_pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    tools:text="¥268.00"
                    android:textColor="@color/text_price"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                android:padding="12dp">

                <TextView
                    android:id="@+id/txt_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="订单编号：2165468546546546854"
                    android:textSize="10sp"
                    android:textColor="@color/text_99"/>
                <TextView
                    android:id="@+id/txt_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    tools:text="支付方式：支付宝"
                    android:textSize="10sp"
                    android:textColor="@color/text_99"/>
                <TextView
                    android:id="@+id/txt_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    tools:text="下单时间：2018-3-15 11:35"
                    android:textSize="10sp"
                    android:textColor="@color/text_99"/>
                <TextView
                    android:id="@+id/txt_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    tools:text="账户名称：杨丽君"
                    android:textSize="10sp"
                    android:textColor="@color/text_99"/>
                <TextView
                    android:id="@+id/txt_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    tools:text="联系方式：13202586542"
                    android:textSize="10sp"
                    android:textColor="@color/text_99"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
